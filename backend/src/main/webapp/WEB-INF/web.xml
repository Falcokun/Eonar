<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>SystemServiceServlet</servlet-name>
        <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
        <init-param>
            <param-name>services</param-name>
            <param-value>pe.scargglioni.eonar.backend.RegistrationEndpoint,
                pe.scargglioni.eonar.backend.MessagingEndpoint
            </param-value>
        </init-param>
        <init-param>
            <param-name>channels</param-name>
            <param-value>books,game,music,sports,travel</param-value>
        </init-param>
        <init-param>
            <param-name>credential</param-name>
            <param-value>/WEB-INF/Eonar-cfa6368634ca.json</param-value>
        </init-param>
        <init-param>
            <param-name>databaseUrl</param-name>
            <param-value>https://eonar-4cc7b.firebaseio.com/</param-value>
        </init-param>
        <init-param>
            <param-name>purgeLogs</param-name>
            <param-value>100</param-value>
        </init-param>
        <init-param>
            <param-name>purgeInterval</param-name>
            <param-value>20000</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemServiceServlet</servlet-name>
        <url-pattern>/_ah/spi/*</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>

